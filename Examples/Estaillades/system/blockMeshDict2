// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale res;

lx0 xMin;
ly0 yMin;
lz0 zMin;

lx xMax;
ly yMax;
lz zMax;



vertices        
(
    ($lx0    $ly0    $lz0)
    ($lx     $ly0    $lz0)
    ($lx     $ly     $lz0)
    ($lx0    $ly     $lz0)
    ($lx0    $ly0    $lz)
    ($lx     $ly0    $lz)
    ($lx     $ly     $lz)
    ($lx0    $ly     $lz)
);

blocks          
(
    hex (0 1 2 3 4 5 6 7)  (nx ny nz) simpleGrading (1 1 1)
);

edges
(
);

boundary
(

    outlet 
    {
        type patch;
        faces
        (
            (4 5 6 7)
        );
    }

    inlet 
    {
        type patch;
        faces
        (
            (0 3 2 1)
        );
    }

    walls 
    {
        type patch;
        faces
        (
            (1 5 4 0)
            (3 7 6 2)
            (0 4 7 3)
            (2 6 5 1)
        );
    }

);


